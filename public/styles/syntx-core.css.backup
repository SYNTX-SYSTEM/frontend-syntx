:root {
  --darkest: #03050f;
  --gold: #FFD700;
  --gold-glow: rgba(255, 215, 0, 0.7);
  --neon-glow: 0 0 25px var(--gold-glow);
}

body {
  background-color: var(--darkest);
  margin: 0;
  overflow: hidden;
  font-family: 'Courier New', monospace;
  color: white;
}

.field-container {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-wrapper {
  text-align: center;
  width: 100%;
}

#syntx-logo {
  width: 300px;
  height: auto;
  filter: drop-shadow(var(--neon-glow));
  animation: pulse 2s infinite ease-in-out;
  display: block;
  margin: 0 auto;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.85; transform: scale(1.05); }
}

.slogan {
  color: #B8C5D6;
  font-size: 1.2rem;
  margin-top: 20px;
  text-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
}

.cookie-hint {
  color: #6B7A8F;
  font-size: 0.9rem;
  margin-top: 40px;
  cursor: pointer;
  transition: color 0.3s;
}

.cookie-hint:hover {
  color: var(--gold);
}

/* Logo-Enhancements */
#syntx-logo {
  width: 320px;
  height: auto;
  filter: drop-shadow(0 0 30px var(--gold-glow)) 
          drop-shadow(0 0 60px rgba(255, 215, 0, 0.3));
  animation: pulse 2s infinite ease-in-out,
             glowPulse 3s infinite ease-in-out,
             subtleRotate 20s infinite linear;
  transform-origin: center;
  display: block;
  margin: 0 auto;
}

@keyframes glowPulse {
  0%, 100% { filter: drop-shadow(0 0 30px var(--gold-glow)) 
                     drop-shadow(0 0 60px rgba(255, 215, 0, 0.3)); }
  50% { filter: drop-shadow(0 0 40px var(--gold-glow)) 
                drop-shadow(0 0 80px rgba(255, 215, 0, 0.6)); }
}

@keyframes subtleRotate {
  0% { transform: rotate(0deg) scale(1); }
  50% { transform: rotate(0.5deg) scale(1.05); }
  100% { transform: rotate(0deg) scale(1); }
}

/* Logo Hover Effect */
#syntx-logo:hover {
  animation: pulse 1s infinite ease-in-out,
             glowPulse 1.5s infinite ease-in-out,
             subtleRotate 10s infinite linear;
  filter: drop-shadow(0 0 50px var(--gold-glow)) 
          drop-shadow(0 0 100px rgba(255, 215, 0, 0.8));
  cursor: pointer;
  transition: filter 0.3s ease;
}
